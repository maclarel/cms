<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 mt-3 bg-info rounded", local: true) do |f|  %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.text_area :description, rows: 20, class: "form-control shadow rounded", placeholder: "Article content" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label text-light" %><br>
          <div class="col-10">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Please select any number of categories"}, {multiple: true, size: 5, class: "custom-select shadow rounded"}) %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="form-group row">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>

    <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>
</div>
